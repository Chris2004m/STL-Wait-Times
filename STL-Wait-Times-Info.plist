<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Location permission for nearby facility discovery and sorting -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>This app needs location access to show nearby medical facilities and center the map on your location.</string>
    
    <!-- Configure for turn-by-turn navigation -->
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>location-services</string>
        <string>gps</string>
    </array>
    
    <!-- Mapbox access token -->
    <key>MBXAccessToken</key>
    <string>$(MAPBOX_ACCESS_TOKEN)</string>
</dict>
</plist>
